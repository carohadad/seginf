{{#partial "content"}}
<div class="page-header">
  <h1>Oferta realizada en &quot;{{offer.project.name}}&quot;</h1>
</div>

<div class="row">
  <div class="col-md-12">
    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}

    <p class="lead">
      <b>Fecha</b>: {{userDateTime offer.offerDate}}
      <br>
      <b>Hash</b>: {{offer.hash}}
    </p>

    <div class="extra-actions">
      <a href="/offers/{{offer.id}}/receipt" class="btn btn-default" target="_blank">Descargar Recibo</a>
      {{#if offer.complete}}
      <a href="/offers/{{offer.id}}/document" class="btn btn-default" target="_blank">Ver documento</a>
      <a href="/offers/{{offer.id}}/documentReceipt" class="btn btn-default" target="_blank">Descargar Recibo de Documento</a>
      {{/if}}
    </div>

    {{#if offer.project.closed}}
    {{#unless offer.complete}}
    <div class="well">
      <form method="POST" role="form" enctype="multipart/form-data">
        <div class="form-group">
          <label for="document">Documento de la oferta</label>
          <input type="file" id="document" name="document" required="true">
          <p class="help-block">Documento final de la oferta. El hash debe
          coincidir con el ingresado al momento de realizar la oferta.</p>
        </div>

        <button type="submit" class="btn btn-default">Completar oferta</button>
      </form>
    </div>
    {{/unless}}
    {{/if}}

    <div class="extra-actions">
      <a href="/projects/{{offer.project.id}}">Volver al proyecto</a>
      <a href="/offers">Volver a ofertas realizadas</a>
    </div>
  </div>
</div>
{{/partial}}

{{> layout/main}}


