{{#partial "content"}}
<div class="page-header">
  <h1>Registración de Oferentes</h1>
</div>

<div class="row">
  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <form method="POST" role="form" class="col-md-8">
    <div class="form-group">
      <label for="username">Nombre de usuario</label>
      <input id="username" name="username" class="form-control" value="{{offerer.username}}"
        placeholder="Usuario para el ingreso" required="true">
    </div>
    <div class="form-group">
      <label for="name">Nombre legal</label>
      <input id="name" name="name" class="form-control" value="{{offerer.name}}"
        placeholder="Nombre legal completo" required="true">
    </div>
    <div class="form-group">
      <label for="publicKey">Clave Pública</label>
      <textarea name="publicKey" class="form-control public-key" rows="6" required="true" 
        placeholder="Certificado de clave pública X.509 codificado con PEM">{{offerer.publicKey}}</textarea>
    </div>
    </p>
    </p>
    <div class="form-group">
      <label for="password">Contraseña</label>
      <input id="password" type="password" name="password" class="form-control" required="true"
        placeholder="Contraseña para el ingreso">
    </div>
    </p>
    <div class="form-group">
      <label for="repeatPassword">Repetir Contraseña</label>
      <input id="repeatPassword" type="password" name="repeatPassword" class="form-control" 
        required="true" placeholder="Contraseña para el ingreso">
    </div>

    <button type="submit" class="btn btn-default">Registrar nuevo oferente</button>

    <p class="extra-actions">
      <a href="/login">Login</a>
    </p>
  </form>
</div>
{{/partial}}

{{> layout/main}}

